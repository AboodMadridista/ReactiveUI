<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>ReactiveUI.Events.XamEssentials</AssemblyName>
    <RootNamespace>ReactiveUI.Events</RootNamespace>
    <Description>Provides Observable-based events API for Xamarin Essentials eventhandlers. The contents of this package is automatically generated, please target pull-requests to the code generator.</Description>
    <PackageId>ReactiveUI.Events.XamEssentials</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="*.cs" />
    <None Include="*.cs" />
    <Compile Include="../ReactiveUI.Events/SingleAwaitSubject.cs" />
    <PackageReference Include="System.Reactive" Version="[3.1.1,4)" />
    <PackageReference Include="Xamarin.Essentials" Version="0.6.0-preview" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Events_XAMESSENTIALS.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="MSBuild.Sdk.Extras" Version="1.5.4" />
    <PackageReference Update="SourceLink.Create.CommandLine" Version="2.8.1" />
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
</Project>